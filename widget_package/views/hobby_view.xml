<odoo>
	<data>
		<record id="hobby_form_view" model="ir.ui.view">
			<field name="name">hobby.view</field>
			<field name="model">hobby.details</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<field name = "name" />
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="hobby_tree_view" model="ir.ui.view">
        <field name="name">hobby.view</field>
        <field name="model">hobby.details</field>
            <field name="arch" type="xml">
                <tree string="Medium">
                   
                    <field name="name" />
                    
                </tree>
            </field>
        </record>
		
		
		<record model="ir.actions.act_window" id="hobby_action">
            <field name="name">Hobby</field>
            <field name="res_model">hobby.details</field>
            <field name="view_mode">tree,form</field>
        </record>
	</data>
</odoo>